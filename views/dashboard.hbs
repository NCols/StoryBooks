<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Your stories</p>
<!-- Check if there are any stories -->
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through the stories -->
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td> <!-- here it nows we want the story id, because we're in the stories loop -->
                    <td>{{createdAt}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories yet.</p>
{{/if}}